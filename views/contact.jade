extends layouts/main

block content
  .row
    .twelve.columns
      h1.main-page-title= pageTitle

      .row
        .ten.columns

          form.form(method='POST', action='/contact')

            ul
              li.field.row
                label.two.columns.inline(for='contact_name') Name
                input.ten.columns.omega.input.name(id='contact_name', name='contact[name]', type='text', required)

              li.field.row
                label.two.columns.inline(for='contact_email') Email
                input.ten.columns.omega.input(id='contact_email', name='contact[email]', type='email', required)

              li.field.row
                label.two.columns.inline(for='contact_message') Message
                textarea.ten.columns.omega.input.textarea(id='contact_message', name='contact[message]', placeholder='What can I do for you?', rows=5, required)

            .row
              .push_eight.two.columns.omega
                .medium.info.btn.icon-left.entypo.icon-mail.pull-right
                  a(href='#') Send
