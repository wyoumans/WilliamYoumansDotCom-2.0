doctype html
//if lt IE 7
  <html class="no-js lt-ie9 lt-ie8 lt-ie7">
//if IE 7
  <html class="no-js lt-ie9 lt-ie8">
//if IE 8
  <html class="no-js lt-ie9">
//[if gt IE 8]><!
html.no-js(lang='en', itemscope='', itemtype='http://schema.org/Product')
  //<![endif]

  head
    meta(charset='utf-8')

    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title
      if locals.pageTitle
        = locals.pageTitle + ' | '
      = locals.browserTitle
    meta(name='description', content=locals.metaDescription)
    meta(name='keywords', content=locals.metaKeywords)
    meta(name='author', content='William Youmans')

    //- Facebook Metadata
    meta(property='fb:page_id', content='')
    meta(property='og:image', content='')
    meta(property='og:description', content='')
    meta(property='og:title', content='')

    //- Google+ Metadata
    meta(itemprop='name', content='William Youmans')
    meta(itemprop='description', content='Salt Lake City Freelance Web Software Developer and Consultant')
    meta(itemprop='image', content='')

    //- Favicons
    link(rel='apple-touch-icon', sizes='57x57', href='/apple-touch-icon-57x57.png')
    link(rel='apple-touch-icon', sizes='114x114', href='/apple-touch-icon-114x114.png')
    link(rel='apple-touch-icon', sizes='72x72', href='/apple-touch-icon-72x72.png')
    link(rel='apple-touch-icon', sizes='144x144', href='/apple-touch-icon-144x144.png')
    link(rel='apple-touch-icon', sizes='60x60', href='/apple-touch-icon-60x60.png')
    link(rel='apple-touch-icon', sizes='120x120', href='/apple-touch-icon-120x120.png')
    link(rel='apple-touch-icon', sizes='76x76', href='/apple-touch-icon-76x76.png')
    link(rel='apple-touch-icon', sizes='152x152', href='/apple-touch-icon-152x152.png')
    link(rel='icon', type='image/png', href='/favicon-16x16.png', sizes='16x16')
    link(rel='icon', type='image/png', href='/favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href='/favicon-96x96.png', sizes='96x96')
    link(rel='icon', type='image/png', href='/favicon-160x160.png', sizes='160x160')

    //- Viewport
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1')

    //- Styles
    if locals.useMinifiedAssets
      link(rel='stylesheet', href='/styles/styles.min.css')
    else
      link(rel='stylesheet', href='/styles/styles.css')

    script(src='/bower_components/gumby/js/libs/modernizr-2.6.2.min.js')

  body(class=locals.bodyClass)
    .row
      .fixed-stripe

    header#main-header.main-header
      if locals.showMastHead
        include ../partials/masthead

      else
        .header-spacer

      include ../partials/header-navigation

    //- Content
    section#main.main-content
      block content

      .row
        .six.columns.centered
          .hire-ribbon-wrapper
            .hire-ribbon
              p
                strong.ribbon-content
                  a(href='/contact') Get a free quote today!

    footer#main-footer.main-footer.text-center
      if locals.footerContent && locals.showFooterMedia
        include ../partials/footer-media

      .extra-footer
        include ../partials/footer-navigation

    script.
      var oldieCheck = Boolean(document.getElementsByTagName('html')[0].className.match(/\\soldie\s/g));
      if (!oldieCheck) {
        document.write('<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"><\\/script>');
      } else {
        document.write('<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"><\\/script>');
      }
    script.
      if (!window.jQuery) {
        if (!oldieCheck) {
          document.write('<script src="/bower_components/gumby/js/libs/jquery-2.0.2.min.js"><\\/script>');
        } else {
          document.write('<script src="/bower_components/gumby/js/libs/jquery-1.10.1.min.js"><\\/script>');
        }
      }

    if locals.useMinifiedAssets
      script(gumby-touch='/scripts/vendor', src='/scripts/gumby.min.js')
    else
      script(gumby-touch='/scripts/vendor', src='/bower_components/gumby/js/libs/gumby.js')
      script(src='/bower_components/gumby/js/libs/ui/gumby.retina.js')
      script(src='/bower_components/gumby/js/libs/ui/gumby.fixed.js')
      script(src='/bower_components/gumby/js/libs/ui/gumby.toggleswitch.js')
      //- script(src='/bower_components/gumby/js/libs/ui/gumby.skiplink.js')
      //- script(src='/bower_components/gumby/js/libs/ui/gumby.checkbox.js')
      //- script(src='/bower_components/gumby/js/libs/ui/gumby.radiobtn.js')
      //- script(src='/bower_components/gumby/js/libs/ui/gumby.tabs.js')
      script(src='/bower_components/gumby/js/libs/ui/gumby.navbar.js')
      script(src='/bower_components/gumby/js/libs/ui/jquery.validation.js')
      script(src='/bower_components/gumby-parallax/gumby.parallax.js')
      script(src='/scripts/vendor/jquery.easing.1.3.js')
      script(src='/scripts/custom.js')
      script(src='/bower_components/gumby/js/libs/gumby.init.js')
      script(src='/bower_components/gumby/js/plugins.js')
      script(src='/bower_components/gumby/js/main.js')

    if locals.showAnalytics
      script.
        window._gaq = [['_setAccount','#{locals.analytics}'],['_trackPageview'],['_trackPageLoadTime']];
        Modernizr.load({
          load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
        });
