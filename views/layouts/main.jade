    link(rel='icon', type='image/png', href='/favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href='/favicon-96x96.png', sizes='96x96')
    link(rel='icon', type='image/png', href='/favicon-160x160.png', sizes='160x160')

    //- Viewport
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1')

    //- Styles
    if locals.useMinifiedAssets
      link(rel='stylesheet', href='/styles/styles.min.css')
    else
      link(rel='stylesheet', href='/styles/styles.css')

    script(src='/scripts/vendor/modernizr-3.0.0.min.js')

    if locals.headerJS
      != locals.headerJS

  body(class=locals.bodyClass)
    .row
      .fixed-stripe

    header#main-header.main-header
      if locals.showMastHead
        include ../partials/masthead

      else
        .header-spacer

      include ../partials/header-navigation

    //- Content
    section#main.main-content
      block content

      if locals.showFooterCTA
        .row
          .twelve.columns.text-center
            .large.primary.btn
              a(href='/contact') Get a free quote today!

    footer#main-footer.main-footer.text-center
      if locals.footerContent && locals.showFooterMedia
        include ../partials/footer-media

      .extra-footer
        include ../partials/footer-navigation

    script.
      var oldieCheck = Boolean(document.getElementsByTagName('html')[0].className.match(/\\soldie\s/g));
      if (!oldieCheck) {
        document.write('<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"><\\/script>');
      } else {
        document.write('<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"><\\/script>');
      }

    if locals.useMinifiedAssets
      script(data-touch='/scripts/vendor', src='/scripts/wy.min.js')
    else
      script(src='/bower_components/jquery.easing/js/jquery.easing.js')
      script(src='/bower_components/snabbt.js/snabbt.js')
      script(src='/scripts/custom.js')

    if locals.showAnalytics
      script.
        window._gaq = [['_setAccount','#{locals.analytics}'],['_trackPageview'],['_trackPageLoadTime']];
        Modernizr.load({
          load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
        });
