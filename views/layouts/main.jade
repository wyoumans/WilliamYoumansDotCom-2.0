    script(src='/bower_components/gumby/js/libs/ui/gumby.radiobtn.js')
    script(src='/bower_components/gumby/js/libs/ui/gumby.tabs.js')
    script(src='/bower_components/gumby/js/libs/ui/gumby.navbar.js')
    script(src='/bower_components/gumby/js/libs/ui/jquery.validation.js')
    script(src='/bower_components/gumby-parallax/gumby.parallax.js')

    script(src='/scripts/vendor/jquery.easing.1.3.js')

    if NODE_ENV == 'production'
      script(src='/scripts/custom.min.js')
    else
      script(src='/scripts/custom.js')

    script(src='/bower_components/gumby/js/libs/gumby.init.js')

