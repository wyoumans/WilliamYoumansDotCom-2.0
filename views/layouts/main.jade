  head
    meta(charset='utf-8')

    title
      if locals.pageTitle
        = locals.pageTitle + ' | '
      = locals.browserTitle

    meta(name='description', content=locals.metaDescription)
    meta(name='keywords', content=locals.metaKeywords)
    meta(name='author', content='William Youmans')

    //- Facebook Metadata
    meta(property='fb:page_id', content='wyoumans')
    meta(property='og:type', content='website')
    meta(property='og:title', content='William Youmans')
    meta(property='og:description', content='Boston Freelance Web Software Developer and Consultant')
    meta(property='og:image', content='http://www.williamyoumans.com/favicon-160x160.png')
    meta(property='og:url', content='http://www.williamyoumans.com/')

    //- Twitter Metadata
    meta(property='twitter:account_id', content=locals.twitterId)
    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:site', content='@wyoumansdev')
    meta(name='twitter:url', content='https://twitter.com/wyoumansdev')
    meta(name='twitter:image:src', content='http://www.williamyoumans.com/images/branding/logo-full@2x.jpg')
    meta(name='twitter:image:width', content='550')
    meta(name='twitter:image:height', content='195')
    meta(name='twitter:title', content='Boston Freelance Developer and Consultant - William Youmans')
    meta(name='twitter:description', content=locals.metaDescription)

    //- Google+ Metadata
    meta(itemprop='name', content='William Youmans')
    meta(itemprop='description', content='Boston Freelance Web Software Developer and Consultant')
    meta(itemprop='image', content='http://www.williamyoumans.com/images/branding/favicon-160x160.png')
    meta(name='google-site-verification', content='Muk7w0OzK25unpvJS-Zu6SVz9d6nMMmvDeDm7aVeeCI')

    //- Favicons
    link(rel='apple-touch-icon', sizes='57x57', href='/apple-touch-icon-57x57.png')
    link(rel='apple-touch-icon', sizes='114x114', href='/apple-touch-icon-114x114.png')
    link(rel='apple-touch-icon', sizes='72x72', href='/apple-touch-icon-72x72.png')
    link(rel='apple-touch-icon', sizes='144x144', href='/apple-touch-icon-144x144.png')
    link(rel='apple-touch-icon', sizes='60x60', href='/apple-touch-icon-60x60.png')
