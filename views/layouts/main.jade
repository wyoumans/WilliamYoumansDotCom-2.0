html.no-js(lang='en', itemscope='', itemtype='http://schema.org/Product')
  //<![endif]

  head
    meta(charset='utf-8')

    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title
      if locals.pageTitle
        = locals.pageTitle + ' | '
      = locals.browserTitle
    meta(name='description', content=locals.metaDescription)
    meta(name='keywords', content=locals.metaKeywords)
    meta(name='author', content='William Youmans')

    //- Facebook Metadata
    meta(property='fb:page_id', content='')
    meta(property='og:image', content='')
    meta(property='og:description', content='')
    meta(property='og:title', content='')

    //- Google+ Metadata
    meta(itemprop='name', content='William Youmans')
    meta(itemprop='description', content='Salt Lake City Freelance Web Developer')
    meta(itemprop='image', content='')

    //- Favicons
    link(rel='apple-touch-icon', sizes='57x57', href='/apple-touch-icon-57x57.png')
    link(rel='apple-touch-icon', sizes='114x114', href='/apple-touch-icon-114x114.png')
    link(rel='apple-touch-icon', sizes='72x72', href='/apple-touch-icon-72x72.png')
    link(rel='apple-touch-icon', sizes='144x144', href='/apple-touch-icon-144x144.png')
    link(rel='apple-touch-icon', sizes='60x60', href='/apple-touch-icon-60x60.png')
    link(rel='apple-touch-icon', sizes='120x120', href='/apple-touch-icon-120x120.png')
    link(rel='apple-touch-icon', sizes='76x76', href='/apple-touch-icon-76x76.png')
    link(rel='apple-touch-icon', sizes='152x152', href='/apple-touch-icon-152x152.png')
    link(rel='icon', type='image/png', href='/favicon-16x16.png', sizes='16x16')
    link(rel='icon', type='image/png', href='/favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href='/favicon-96x96.png', sizes='96x96')
    link(rel='icon', type='image/png', href='/favicon-160x160.png', sizes='160x160')

    //- Viewport
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1')

    //- Styles
    if NODE_ENV == 'production'
      link(rel='stylesheet', href='/styles/styles.min.css')
    else
      link(rel='stylesheet', href='/styles/styles.css')

    script(src='/bower_components/gumby/js/libs/modernizr-2.6.2.min.js')

  body(class=locals.bodyClass)
    .row
      .fixed-stripe

    //- Masthead
    header
      if locals.showMastHead
        .masthead.parallax(gumby-parallax='-0.5')
          .row
            .medium.primary.btn.cta
              a(href='/contact') Get a Quote!
                i.icon-quote
            h1
              span.top I'm a freelance web developer
              span.bottom based in Salt Lake City, Utah.
      else
        .header-spacer

      //- Navigation
      .navcontain
        #main-nav.navbar(gumby-fixed='top')
          .row
            a.toggle(gumby-trigger='#main-nav > .row > ul', href='#')
              i.icon-menu
            .four.columns
              a.logo(href='/')
                img(src='/images/branding/logo-full.jpg', alt='William Youmans', gumby-retina='gumby-retina')
            ul.eight.columns
              li
                a(href='/portfolio') Portfolio
                  i.icon-picture
              li
                a(href='/services') Services
                  i.icon-lamp
              li
                a(href='/blog') Blog
                  i.icon-feather
              li
                a(href='/about') About
                  i.icon-user
              li.cta
                a(href='/contact') Hire Me
                  i.icon-phone

    //- Content
    section#main.main-content
      block content

    footer.main-footer.text-center
      if locals.footerContent && locals.showFooterMedia
        .row
          .four.columns
            h3 Currently Seeing
              i.icon-camera
            if locals.footerContent.image
              .row.image-row
                a.ttip.columns.centered.nine.image.photo(href=locals.footerContent.image.href, target='_blank', data-tooltip=locals.footerContent.image.date_formatted)
                  img(src=locals.footerContent.image.src, alt='Latest from Instagram')
            else
              p Nothing to report

          .four.columns
            h3 Currently Watching
              i.icon-play
            if locals.footerContent.movie
              .row.image-row
                a.ttip.columns.centered.nine.image.photo(href=locals.footerContent.movie.href, target='_blank', data-tooltip='Latest from Netflix')
                  img(src=locals.footerContent.movie.src, alt='Latest from Netflix')
            else
              p Nothing to report

          .four.columns
            h3 Currently Listening
              i.icon-note-beamed
            if locals.footerContent.track
              .row.image-row
                a.ttip.columns.centered.nine.image.photo(href=locals.footerContent.track.href, target='_blank', data-tooltip=locals.footerContent.track.date_formatted)
                  img(src=locals.footerContent.track.imageSrc, alt=locals.footerContent.track.name)
            else
              p Nothing to report

      .extra-footer
        .row
          .four.columns
            p &copy; #{new Date().getFullYear()} William Youmans

          .four.columns.text-center
            p
              a.ttip(href='https://github.com/wyoumans', target='_blank', data-tooltip='Github'): i.icon-github
              a.ttip(href='https://www.facebook.com/wyoumans', target='_blank', data-tooltip='Facebook'): i.icon-facebook
              a.ttip(href='https://twitter.com/wyoumansdev', target='_blank', data-tooltip='Twitter'): i.icon-twitter
              a.ttip(href='http://instagram.com/cwyouman', target='_blank', data-tooltip='Instagram'): i.icon-instagram
              a.ttip(href='http://www.last.fm/user/gotwilly', target='_blank', data-tooltip='Last.fm'): i.icon-lastfm
              a.ttip(href='/', target='_blank', data-tooltip='RSS'): i.icon-rss

          .four.columns
            p
              i.icon-mail
              a(href="mailto:hello@williamyoumans.com") hello@williamyoumans.com

    script.
      var oldieCheck = Boolean(document.getElementsByTagName('html')[0].className.match(/\\soldie\s/g));
      if (!oldieCheck) {
        document.write('<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"><\\/script>');
      } else {
        document.write('<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"><\\/script>');
      }
    script.
      if (!window.jQuery) {
        if (!oldieCheck) {
          document.write('<script src="/bower_components/gumby/js/libs/jquery-2.0.2.min.js"><\\/script>');
        } else {
          document.write('<script src="/bower_components/gumby/js/libs/jquery-1.10.1.min.js"><\\/script>');
        }
      }

    script(gumby-touch='/scripts/vendor', src='/bower_components/gumby/js/libs/gumby.js')
    script(src='/bower_components/gumby/js/libs/ui/gumby.retina.js')
