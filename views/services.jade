extends layouts/main

block content
  .row
    .large-12.columns
      h1.main-page-title= pageTitle

  .row
    .large-12.columns

      if service.image
        .section-wrapper.image.th
          img(src="/images/content/services/#{service.image}", alt= pageTitle, itemprop="image")

      .section-wrapper.copy
        each paragraph in service.copy
          p!= paragraph

      .section-wrapper.bottom-copy
        h2 Questions?
        p
          | If you have any questions or comments about these services, don't hesitate to get in
          | <a href="/contact">touch</a>. I'd love to discuss what I can do for <a href="/contact">you</a>.
          | Also, please have a look at some of my recent <a href="/projects">projects.</a>
