extends layouts/main

block content
  .row
    .large-12.columns
      h1.main-page-title=locals.pageTitle

  .row
    if locals.services && locals.services.length
      - var count = 0;
      each service in locals.services
        - count++
        .section-wrapper.service.clearfix
          if count%2
            .large-6.columns
              .icon-wrapper
                i.fi-check

          .large-6.columns
            h2: a(href='/' + locals.servicesBase + '/' + service.slug)= service.title

          if !(count%2)
            .large-6.columns
              .icon-wrapper
                i.fi-check

      .section-wrapper.bottom-copy.clearfix
        h2 Questions?

        p
          | If you have any questions or comments about these services, don't hesitate to get
          | in <a href="/contact">touch</a>. I'd love to discuss what I can do for <a href="/contact">you</a>.
          | Also, please have a look at some of my recent <a href="/projects">projects.</a>
